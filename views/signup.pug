form(action='/signup-submit' method='POST')
  fieldset
    legend New User SignUp: 
    .form-data
      label
        strong Name:
      input(type='text' size='16' name='name')
    .form-data
      label
        strong Gender:
      input(type='radio' name='gender' value='Male')
      | Male
      input(type='radio' name='gender' value='Female')
      | Female
    .form-data
      label
        strong Age: 
      input(type='text' size='6' maxlength='2' name='age')
    .form-data
      label
        strong Personality Type
      input(type='text' name='personalitytype' size='6' maxlength='4')
      |                             (
      a(href='#') Don&apos;t know your type?
      | )
    .form-data
      label
        strong Favorite OS
      select(name='favoriteOs')
        option Windows
        option MacOS X
        option Linux
    .form-data
      label
        strong Seeking Age
      input(type='text' name='seekingAgemin' value='min' size='6' maxlength='2')
      |  To 
      input(type='text' name='seekingAgemax' value='max' size='6' maxlength='2')
    input(type='submit' value='Sign Up')
